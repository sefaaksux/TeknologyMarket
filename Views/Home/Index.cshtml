@model IEnumerable<Product>
@{
    ViewData["Title"] = "Home Page";
}

<div class="card card-body">
    <form asp-action="Index" method="get">
        <div class="container">
            <div class="row">
                <div class="col-md-11">
                    <select name="category" class="form-control" asp-items="ViewBag.Categories">
                        <option value="0">Hepsi</option>
                    </select>
                </div>
                <div class="col-md-1">
                    <button type="submit">Filtrele</button>
                </div>
            </div>
        </div>
    </form>
</div>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th style="width: 80px;">@Html.DisplayNameFor(m=>m.ProductId)</th>
            <th style="width: 250px;">@Html.DisplayNameFor(m=>m.Image)</th>
            <th>@Html.DisplayNameFor(m=>m.Name)</th>
            <th style="width: 150px;">@Html.DisplayNameFor(m=>m.Price)</th>
            
            <th style="width: 150px;"></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var prd in Model){
            <tr>
                <td>@prd.ProductId</td>
                <td>
                    <img src="~/img/@prd.Image" alt=""class="img-fluid">
                </td>
                <td>@prd.Name</td>
                <td>@prd.Price</td>
                
                <td>
                    <a href="#">Edit</a>
                    <a href="#">Delete</a>
                </td> 
            </tr>
        }
    </tbody>
</table>
